FROM container-registry.oracle.com/os/oraclelinux:8-slim

RUN microdnf update && \
    microdnf module enable ruby:3.1 && \
    microdnf install ruby ruby-devel rubygems make gcc glibc system-rpm-config git openssl-devel && \
    microdnf module reset ruby && \
    microdnf clean all

RUN gem install --no-document bundler && \
    gem install stringio -v '~> 3.1.0, >= 3.1.0' && \
    gem install rdoc -v '~> 6.3.4, >= 6.3.4.1' && \
    gem install openssl -v '~> 3.2.0, >= 3.2.0' -- --with-openssl-dir=/usr


CMD ["ruby", "-v"]

